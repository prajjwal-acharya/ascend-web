{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "manifest.schema.v1.0.0",
    "title": "Manifest Schema",
    "description": "Schema for version manifest files",
    "type": "object",
    "required": [
        "version",
        "created_at",
        "schema_version",
        "counts",
        "checksums"
    ],
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
            "description": "Snapshot version (semver format)"
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of snapshot creation"
        },
        "schema_version": {
            "type": "string",
            "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
            "description": "Version of schemas used for validation"
        },
        "counts": {
            "type": "object",
            "required": [
                "problems",
                "topics"
            ],
            "properties": {
                "problems": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Total number of problems"
                },
                "topics": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Total number of topics"
                },
                "contests": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Total number of contests"
                }
            },
            "additionalProperties": false
        },
        "checksums": {
            "type": "object",
            "additionalProperties": {
                "type": "string",
                "pattern": "^sha256:[a-f0-9]{64}$"
            },
            "description": "SHA256 checksums for each data file"
        },
        "notes": {
            "type": "string",
            "description": "Optional notes about this snapshot"
        }
    },
    "additionalProperties": false
}